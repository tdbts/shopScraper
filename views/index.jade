extends layout

block content
	h1 ShopScraper - #{storeName} 
	p Here are the products you scraped: 

	h3 #{storeName} Flyer for #{startDate} to #{endDate} 

	.products_container
		//- p= products
		ul 
			each product in products
				li 
					h3.product_name Product: #{product.ProductName}
					p.product_desciption Description : #{product.ProductDescription}
					p.product_price Price: #{product.Price}
					img.product_image(src=product.ImageUrl)
